<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:calendar="http://schemas.android.com/apk/res/org.simple.calendar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffededed" >
	
    <org.simple.calendar.CalendarView
        android:id="@+id/calendarView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        calendar:cellHeight="50dp"
        calendar:weeks="星期日,星期一,星期二,星期三,星期四,星期五,星期六"
        calendar:weeksBackgroundColor="@android:color/transparent" />

</LinearLayout>